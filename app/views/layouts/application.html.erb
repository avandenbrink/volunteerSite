<!DOCTYPE html>
<html>
<head>
  <title>Treebooks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<a class="navbar-brand" href="/">Communities</a>

			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to 'New Status', new_status_path, class: 'btn' %></li>
				<li class="dropdown">
		          <%= link_to new_user_session_path, class: 'btn dropdown-toggle', :'data-toggle' => 'dropdown' do %> 
		          	Sign In <b class="caret"></b>
		          <% end %>
		          <ul class="dropdown-menu">
		            <li><a href="/statuses">Statuses</a></li>
		            <li><a href="#">Groups</a></li>
		            <li><a href="#">Interests</a></li>
		            <li class="divider"></li>
		            <li><a href="#">Rewards</a></li>
		            <li class="divider"></li>
		            <li><a href="#">Settings</a></li>
		          </ul>
		        </li>
			</ul>
		</div>
	</nav>
	<div class="container">
		<p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
		<%= yield %>
	</div>
</body>
</html>
